{
    "name": "Python 3.11 Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "pip install poetry && poetry install --with dev",
    "remoteUser": "root"
}
